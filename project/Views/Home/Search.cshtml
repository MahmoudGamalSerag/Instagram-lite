@model IEnumerable<project.Models.User>

@{
    ViewBag.Title = "Search";
}

<h2>Search</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<form method="get" asp.action="Search">
    <p>
        <input type="search" placeholder="Enter Name OR Email...."value="@ViewData["userserach"]"name="UserSearch"style="width:500px;" />
        <input type="submit" value="search" class=" btn btn-primary" />
    </p>

</form>
<table class="table">
    

@foreach (var item in Model) {
    <tr>
        <td>
            <img src="@Html.DisplayFor(modelItem => item.Image) " width="80" height="120" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>

        <td>
        <td>
            @Html.ActionLink("Add Friend", "Edit", new { id = item.ID },
           new { @class = "btn btn-primary", @style = "color:white" }) 
        </td>
    </tr>
}

</table>
